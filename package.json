{
  "name": "monolith-boilerplate",
  "version": "1.0.0",
  "description": "Voice Office monolithic boilerplate",
  "main": "index.ts",
  "scripts": {
    "installation": "npm install && npm install --prefix client",
    "build": "tsc -p tsconfig.json && copyfiles -u 1 src/**/*.yaml src/**/*.ejs dist/src",
    "start": "export NODE_CONFIG_DIR=./src/config && node dist/src/index.js",
    "server": "nodemon ./index.ts",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\" ",
    "test": "mocha -r ts-node/register 'tests/**/*.test.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gate42-srl/monolith-boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Gate42-srl/monolith-boilerplate/issues"
  },
  "homepage": "https://github.com/Gate42-srl/monolith-boilerplate#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/config": "^3.3.0",
    "@types/fastify-jwt": "^0.8.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/mocha": "^10.0.0",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.9",
    "@types/pg": "^8.6.5",
    "@types/sinon": "^10.0.13",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "bcrypt": "^5.1.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^3.6.0",
    "config": "^3.3.8",
    "date-fns": "^2.29.3",
    "fastify": "^3.11.0",
    "fastify-cors": "^3.0.3",
    "fastify-express": "^0.2.0",
    "fastify-jwt": "^2.3.0",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^10.1.0",
    "moment": "^2.29.4",
    "mongoose": "^6.7.1",
    "morgan": "^1.10.0",
    "pg": "^8.8.0",
    "sinon": "^14.0.2",
    "winston": "^3.8.2"
  }
}
